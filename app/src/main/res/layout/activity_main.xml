<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D7D7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- CoordinatorLayout sebagai kontainer untuk top app bar dan konten utama -->


    <!-- TopAppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        :background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:menu="@menu/top_app_bar_menu"
        app:navigationContentDescription="Drawer"
        android:background="#454545"
        app:navigationIcon="@drawable/ic_wallet_white"
        app:subtitle="Saldo: Rp 1,000,000"
        app:subtitleTextColor="@android:color/white"
        app:title="USER"
        app:titleTextColor="@android:color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#454545">
        <TextView
            android:id="@+id/transactionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRANSAKSI"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="16dp"
            android:gravity="center"
            android:layout_margin="8dp"/>
    </LinearLayout>



    <!-- RecyclerView dengan layout_weight untuk mengisi ruang -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_weight="1"
        android:padding="16dp" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/yellow"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_input_add"
        app:fabCustomSize="70dp"
        android:layout_gravity="end|bottom"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"/>

</LinearLayout>
